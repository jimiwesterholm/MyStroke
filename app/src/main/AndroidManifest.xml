<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jimi.mystroke">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.PatientHomeActivity" />
        <activity android:name=".activities.ExerciseActivity" />
        <activity android:name=".activities.ImageryActivity" />
        <activity android:name=".activities.ViewImageriesActivity" />
        <activity android:name=".activities.TrackerActivity" />
        <activity android:name=".activities.AssessmentActivity" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.HelpActivity" />
        <activity android:name=".activities.ViewExercisesActivity" />
        <activity android:name=".activities.ViewExerciseSectionsActivity" />
        <activity
            android:name=".activities.ChatActivity"
            android:label="@string/title_activity_chat"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.AddToListActivity" />
        <activity
            android:name=".activities.AddExerciseActivity"
            android:label="@string/title_activity_add_exercise"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.ViewPatientsActivity"
            android:label="@string/title_activity_view_patients"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.PatientActivity"
            android:label="@string/title_activity_view_patient"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.TherapistHomeActivity"
            android:label="@string/title_activity_therapist_home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.PatientListActivity"
            android:label="@string/title_activity_patient_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.EditListImageryActivity"
            android:label="@string/title_activity_edit_list_imagery"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.EditListExerciseActivity"
            android:label="@string/title_activity_edit_list_exercise"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>